<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
      <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="#ffefebe7" />
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/console_line_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffefebe7"
            android:orientation="vertical" >
            
        	<TextView 
        		android:layout_width="fill_parent"
        		android:layout_height="1dp"
        		android:background="#999"/>

            <RadioGroup
                android:id="@+id/main_tab_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#000"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/tab_list"
                    style="@style/main_tab_bottom"
                    android:checked="true"
                    android:drawableTop="@drawable/nav_liston"
                    android:text="@string/tab_list" />

                <RadioButton
                    android:id="@+id/tab_notice"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/nav_notice"
                    android:text="@string/tab_notice" />

                <RadioButton
                    android:id="@+id/tab_log"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/nav_log"
                    android:text="@string/tab_log" />

                <RadioButton
                    android:id="@+id/tab_more"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/nav_set"
                    android:text="@string/tab_set" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</TabHost>